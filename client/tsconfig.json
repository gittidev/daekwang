{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["vite-plugin-glsl/ext", "@types/node", "@nuxt/schema"],
    "moduleResolution": "node",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "types",
    "components",
    "composables",
    "pages",
    "app.vue",
    "constants/zLayers.ts",
    "nuxt.config.ts",
    "app/**/*.ts",
    "app/**/*.vue",
    ".nuxt/**/*.d.ts"
  ]
}
